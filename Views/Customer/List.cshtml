@{
}

@model List<CRUDAPPMVC.Models.Customer>


<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Customers</h1>
    <a class="btn btn-success" asp-controller="Customer" asp-action="Add">Add Customer</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Address</th>
            <th> </th>
            
        </tr>
    </thead>
    <tbody>
            @foreach (var customer in Model)
        {
            <tr>
                  <td> @customer.Id </td>
                  <td> @customer.Name</td>
                  <td> @customer.Gender </td>
                  <td> @customer.Mobile </td>
                  <td> @customer.Address </td>

                  <td>  
                      <a class="btn btn-primary" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                  </td>
                  <td>
                    <form asp-action="Delete" asp-controller="Customer" method="post">
                        <input type="hidden" name="Id" value="@customer.Id"/>
                        <button type="submit" class="btn btn-danger ms-3">Delete</button>

                    </form>
                  </td>
            </tr>
        }
    </tbody>
</table>