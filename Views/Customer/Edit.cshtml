@model CRUDAPPMVC.Models.Customer



<h1>Edit Customers</h1>

@if (Model == null)
{
    <p>No Student was found with this ID</p>

}
else {
<form method="post">

    <div class="mt-3 ">
        <label class=" form-label">Id</label>
        <input type="text" class=" form-control" asp-for="Id" readonly />
            

    </div>

    <div class="mt-3 ">
        <label class=" form-label">Name</label>
        <input type="text" class=" form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>

    </div>

    <div class="mt-3 ">
        <label class=" form-label">Email</label>
        <input type="email" class=" form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>


    </div>

    <div class="mt-3 ">
            <label class=" form-label">Gender</label>
        <input type="text" class=" form-control" asp-for="Gender" />
            <span class="text-danger" asp-validation-for="Gender"></span>

    </div>

    <div class="mt-3 ">
        <label class=" form-label">Address</label>
        <input type="text" class=" form-control" asp-for="Address" />
            <span class="text-danger" asp-validation-for="Address"></span>

    </div>


    <div class="mt-3 ">
        <label class=" form-label">Mobile Number</label>
        <input type="text" class=" form-control" asp-for="Mobile" />
            <span class="text-danger" asp-validation-for="Mobile"></span>

    </div>


    <div class=" mt-3">
        <button type="submit" class=" btn btn-primary"> Save </button>
    </div>



</form>


}

@section Scripts{
    <partial name ="_ValidationScriptsPartial" />
}